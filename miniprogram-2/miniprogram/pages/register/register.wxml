<view class="container">
  <view class="header">
    <text class="title">注册 {{roleText}} 账号</text>
  </view>

  <view class="card">
    <view class="form-item">
      <text class="label">姓名</text>
      <input
        class="input"
        placeholder="请输入真实姓名"
        value="{{form.name}}"
        data-field="name"
        bindinput="onInputChange"
      />
    </view>

    <view class="form-item">
      <text class="label">性别</text>
      <radio-group bindchange="onGenderChange" class="gender-group">
        <label class="radio">
          <radio value="male" checked="{{form.gender==='male'}}" />
          男
        </label>
        <label class="radio">
          <radio value="female" checked="{{form.gender==='female'}}" />
          女
        </label>
      </radio-group>
    </view>
  </view>

  <!-- 学生 -->
  <view wx:if="{{role==='student'}}" class="card">
    <view class="form-item">
      <text class="label">学校</text>
      <input class="input" data-field="school" bindinput="onInputChange"/>
    </view>
    <view class="form-item">
      <text class="label">专业</text>
      <input class="input" data-field="major" bindinput="onInputChange"/>
    </view>
  </view>

  <!-- 校友 -->
  <view wx:if="{{role==='alumni'}}" class="card">
    <view class="form-item">
      <text class="label">毕业院校</text>
      <input class="input" data-field="school" bindinput="onInputChange"/>
    </view>
    <view class="form-item">
      <text class="label">公司</text>
      <input class="input" data-field="company" bindinput="onInputChange"/>
    </view>
  </view>

  <!-- 老师 -->
  <view wx:if="{{role==='teacher'}}" class="card">
    <view class="form-item">
      <text class="label">学校</text>
      <input class="input" data-field="school" bindinput="onInputChange"/>
    </view>
    <view class="form-item">
      <text class="label">职称</text>
      <input class="input" data-field="title" bindinput="onInputChange"/>
    </view>
  </view>

  <button class="submit-btn" bindtap="onSubmit">完成注册</button>
</view>
