page {
    background: linear-gradient(180deg, #eaf3ff 0%, #f7fbff 100%);
  }
  
  .container {
    padding: 40rpx;
  }
  
  .header {
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: 600;
    color: #0052d9;
  }
  
  .card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 40rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 82, 217, 0.08);
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .input {
    background: #f2f6ff;
    border-radius: 16rpx;
    padding: 20rpx;
    font-size: 28rpx;
  }
  
  .gender-group {
    display: flex;
    gap: 60rpx;
    margin-top: 10rpx;
  }
  
  .radio {
    font-size: 28rpx;
    color: #333;
  }
  
  .submit-btn {
    margin-top: 40rpx;
    background: linear-gradient(90deg, #0052d9, #3a8dff);
    color: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
  }
  