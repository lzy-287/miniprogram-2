<view class="container">

<!-- 用户信息 -->
<view class="user-info">
  <image class="avatar" src="{{userInfo.avatar || defaultAvatar}}" mode="aspectFill" />
  <view class="info">
    <text class="name">{{userInfo.name}}</text>
    <t-tag theme="primary" variant="light" size="small">{{userInfo.role}}</t-tag>
  </view>
</view>

<!-- 统计数字 -->
<view class="stats">
  <view class="stat-item">
    <text class="number">{{pendingCount}}</text>
    <text class="label">待审核申请</text>
  </view>
  <view class="stat-item">
    <text class="number">{{approvedCount}}</text>
    <text class="label">已通过申请</text>
  </view>
</view>

<!-- 功能入口 -->
<view class="menu">
  <view class="menu-item" bindtap="navigateToResumeOnline">
    <text>在线简历</text>
  </view>
  <view class="menu-item" bindtap="navigateToResumeUpload">
    <text>附件简历</text>
  </view>
  <view class="menu-item" bindtap="navigateToResumeAI">
    <text>简历优化</text>
  </view>
  <view class="menu-item logout" bindtap="confirmLogout">
    <text>注销账号</text>
  </view>
</view>

<t-dialog
  visible="{{showLogoutDialog}}"
  title="提示"
  content="确认注销账号吗？此操作不可恢复。"
  confirm-btn="确认"
  cancel-btn="取消"
  bind:confirm="logout"
  bind:cancel="cancelLogout"
/>
</view>
