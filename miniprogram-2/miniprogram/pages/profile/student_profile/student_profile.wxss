page { background: #f5f5f5; padding: 30rpx; }
.user-info { display: flex; align-items: center; margin-bottom: 30rpx; }
.avatar { width: 140rpx; height: 140rpx; border-radius: 50%; margin-right: 24rpx; }
.info { display: flex; flex-direction: column; }
.name { font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 12rpx; }

.stats { display: flex; justify-content: space-around; background: #fff; padding: 30rpx; border-radius: 20rpx; margin-bottom: 30rpx; }
.stat-item { text-align: center; }
.number { font-size: 36rpx; font-weight: bold; color: #333; }
.label { font-size: 28rpx; color: #999; }

.menu { background: #fff; border-radius: 20rpx; }
.menu-item { padding: 30rpx; border-bottom: 1rpx solid #f5f5f5; font-size: 28rpx; color: #333; }
.menu-item:last-child { border-bottom: none; color: #ff4d4f; }
.logout { text-align: center; }
