<view class="container">

<view class="stats">
  <view class="stat-item">
    <text class="number">{{pendingResumeCount}}</text>
    <text class="label">待审核简历</text>
  </view>
  <view class="stat-item">
    <text class="number">{{approvedResumeCount}}</text>
    <text class="label">已审核简历</text>
  </view>
  <view class="stat-item">
    <text class="number">{{passRate}}%</text>
    <text class="label">简历通过率</text>
  </view>
</view>

<view class="menu">
  <view class="menu-item logout" bindtap="confirmLogout">注销账号</view>
</view>

<t-dialog
  visible="{{showLogoutDialog}}"
  title="提示"
  content="确认注销账号吗？"
  confirm-btn="确认"
  cancel-btn="取消"
  bind:confirm="logout"
  bind:cancel="cancelLogout"
/>
</view>
