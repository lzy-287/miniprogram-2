<view class="container">

<view class="user-info">
  <image class="avatar" src="{{userInfo.avatar || defaultAvatar}}" />
  <view class="info">
    <text class="name">{{userInfo.name}}</text>
    <t-tag theme="primary" variant="light">{{userInfo.role}}</t-tag>
  </view>
</view>

<view class="stats">
  <view class="stat-item">
    <text class="number">{{postCount}}</text>
    <text class="label">已发布岗位</text>
  </view>
  <view class="stat-item">
    <text class="number">{{successCount}}</text>
    <text class="label">内推成功人数</text>
  </view>
  <view class="stat-item">
    <text class="number">{{pendingResumeCount}}</text>
    <text class="label">待审核简历</text>
  </view>
</view>

<view class="menu">
  <view class="menu-item logout" bindtap="confirmLogout">注销账号</view>
</view>

<t-dialog
  visible="{{showLogoutDialog}}"
  title="提示"
  content="确认注销账号吗？"
  confirm-btn="确认"
  cancel-btn="取消"
  bind:confirm="logout"
  bind:cancel="cancelLogout"
/>
</view>
