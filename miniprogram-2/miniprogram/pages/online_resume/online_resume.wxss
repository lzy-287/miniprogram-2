page {
    background: #f4f8ff;
  }
  
  .container {
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  .default-card {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .default-text {
    color: #4a6cf7;
    font-weight: 600;
  }

  /* 卡片 */
  .card {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 28rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 80, 255, 0.05);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1f3c88;
  }
  
  .edit-icon,
  .add-icon {
    font-size: 28rpx;
    color: #4a6cf7;
  }
  
  .card-content {
    font-size: 26rpx;
    color: #555;
  }
  
  .main-text {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
  }
  
  .sub-text {
    display: block;
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #888;
  }
  
  .desc {
    color: #666;
    font-size: 26rpx;
  }
  
  .sub-card {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4rpx 12rpx rgba(0, 80, 255, 0.04);
  }
  
  .count {
    font-size: 24rpx;
    color: #4a6cf7;
  }