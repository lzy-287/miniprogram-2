page {
    background: #f4f8ff;
  }
  
  .container {
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  /* 标题 */
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 30rpx;
    color: #1f3c88;
  }
  
  /* 表单项 */
  .form-item {
    background: #ffffff;
    padding: 24rpx;
    margin-bottom: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 80, 255, 0.04);
  }
  
  .label {
    font-size: 26rpx;
    color: #333;
    display: block;
    margin-bottom: 12rpx;
  }
  
  input {
    font-size: 26rpx;
  }
  
  .radio {
    margin-right: 40rpx;
  }
  
  .picker {
    color: #555;
  }
  
  .save-btn {
    width: 100%;
    height: 80rpx;
    margin-top: 40rpx;
    background: #4a6cf7;
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
  }