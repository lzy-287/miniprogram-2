<scroll-view class="container" scroll-y="true" style="height:100vh; padding-bottom:100rpx;">

<view class="section-title">个人信息</view>

<!-- 姓名 -->
<view class="form-item">
  <text class="label">姓名</text>
  <input placeholder="请输入姓名"
         value="{{form.name}}"
         bindinput="onInput"
         data-field="name" />
</view>

<!-- 性别 -->
<view class="form-item">
  <text class="label">性别</text>
  <radio-group bindchange="onGenderChange">
    <label class="radio">
      <radio value="男" checked="{{form.gender=='男'}}"/> 男
    </label>
    <label class="radio">
      <radio value="女" checked="{{form.gender=='女'}}"/> 女
    </label>
  </radio-group>
</view>

<!-- 当前身份 -->
<view class="form-item">
  <text class="label">当前身份</text>
  <radio-group bindchange="onIdentityChange">
    <label class="radio">
      <radio value="学生" checked="{{form.identity=='学生'}}"/> 学生
    </label>
    <label class="radio">
      <radio value="社会人员" checked="{{form.identity=='社会人员'}}"/> 社会人员
    </label>
  </radio-group>
</view>

<!-- 出生日期 -->
<view class="form-item">
  <text class="label">出生年月</text>
  <picker mode="date"
          value="{{form.birthDate}}"
          bindchange="onBirthChange">
    <view class="picker">
      {{form.birthDate || '请选择出生日期'}}
    </view>
  </picker>
</view>

<!-- 现居住城市 -->
<view class="form-item">
  <text class="label">现居住城市</text>
  <input placeholder="请输入现居住城市"
         value="{{form.currentCity}}"
         bindinput="onInput"
         data-field="currentCity"/>
</view>

<!-- 户口所在地 -->
<view class="form-item">
  <text class="label">户口所在地</text>
  <input placeholder="请输入户口所在地"
         value="{{form.hukouCity}}"
         bindinput="onInput"
         data-field="hukouCity"/>
</view>

<!-- 政治面貌 -->
<view class="form-item">
  <text class="label">政治面貌</text>
  <input placeholder="如：团员/党员/群众"
         value="{{form.politicalStatus}}"
         bindinput="onInput"
         data-field="politicalStatus"/>
</view>

<!-- 手机 -->
<view class="form-item">
  <text class="label">手机号码</text>
  <input type="number"
         placeholder="请输入手机号码"
         value="{{form.phone}}"
         bindinput="onInput"
         data-field="phone"/>
</view>

<!-- 邮箱 -->
<view class="form-item">
  <text class="label">电子邮箱</text>
  <input placeholder="用于接收面试通知"
         value="{{form.email}}"
         bindinput="onInput"
         data-field="email"/>
</view>

<!-- 微信号 -->
<view class="form-item">
  <text class="label">微信号</text>
  <input placeholder="仅在主动交换时发送"
         value="{{form.wechat}}"
         bindinput="onInput"
         data-field="wechat"/>
</view>

<!-- 保存按钮 -->
<button class="save-btn" bindtap="save">
  保存
</button>

</scroll-view>