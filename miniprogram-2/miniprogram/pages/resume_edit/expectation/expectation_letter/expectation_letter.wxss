page {
    background: #f4f8ff;
  }
  
  .container {
    padding: 24rpx;
  }
  
  .form-item {
    background: #ffffff;
    padding: 24rpx;
    margin-bottom: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 80, 255, 0.04);
  }
  
  .label {
    font-size: 26rpx;
    color: #333;
    display: block;
    margin-bottom: 12rpx;
  }
  
  .value {
    font-size: 26rpx;
    color: #666;
  }
  
  .save-btn {
    width: 100%;
    height: 80rpx;
    margin-top: 40rpx;
    background: #4a6cf7;
    color: #fff;
    border-radius: 40rpx;
  }