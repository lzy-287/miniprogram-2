<!-- pages/user_profile/user_profile.wxml -->
<view class="container">

<!-- 用户信息卡片 -->
<view class="user-card">
  <view class="avatar-container">
    <t-avatar
      size="large"
      icon="user"
      image="{{userInfo.avatarUrl || ''}}"
    />
  </view>

  <view class="user-info">
    <view class="username">未登录</view>
    <view class="role-tag">
      <t-tag theme="primary" variant="light" size="small">游客</t-tag>
    </view>
  </view>
</view>

<!-- 引导说明 -->
<view class="hint-section">
  <text class="hint-text">
    登录后可根据身份使用学生、校友或教师的专属功能
  </text>
</view>

<!-- 主操作按钮 -->
<view class="action-section">
  <t-button theme="primary" size="large" block bindtap="onLoginTap">
    登录 / 注册
  </t-button>
</view>

<!-- 辅助信息 -->
<view class="footer-section">
  <view class="footer-item" bindtap="onNavigateToAbout">关于我们</view>
  <view class="version-info">版本号 1.0.0</view>
</view>

</view>
